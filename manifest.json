{
  "name": "Guider",
  "description": "helps to navigate through tabs",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "clipboardWrite",
    "downloads"
  ],
  "host_permissions": ["http://*/*", "https://*/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["contentTEST.js"],
      "matches": ["<all_urls>"],
      "type": "module"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
